{
  "name": "logme",
  "version": "1.0.0",
  "description": "Standardized logging utility with code-based logging system",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "logme": "dist/src/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "dev": "tsc --watch",
    "cli": "node dist/src/cli.js",
    "docs": "typedoc --out docs src",
    "gen:schema": "ts-node scripts/generateSchema.ts",
    "pack-local": "node install-local.js"
  },
  "keywords": [
    "logging",
    "logs",
    "standardized",
    "fetch",
    "logger",
    "structured-logging",
    "code-based",
    "log-codes"
  ],
  "author": "Ali Åžahin",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "table": "^6.8.1",
    "yargs": "^17.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/logme.git"
  },
  "bugs": {
    "url": "https://github.com/username/logme/issues"
  },
  "homepage": "https://github.com/username/logme#readme"
}
